<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@drawable/k13"
    android:gravity="center"
    android:orientation="vertical"
	android:id="@+id/full_player"
	android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70000000"
        android:gravity="center"
        android:orientation="vertical" >
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal" >
			
			<ImageView
				android:id="@+id/exit_full_player"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="5dp"
				android:src="@drawable/skip"
				tools:ignore="ContentDescription,RtlSymmetry" />

        <TextView
            android:id="@+id/textNowPlaying"
            android:layout_width="0dp"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="25sp"
			tools:ignore="HardcodedText" />

		<ImageView
			android:visibility="invisible"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="5dp"
			android:src="@drawable/skip"
			tools:ignore="ContentDescription,RtlSymmetry" />
		
		</LinearLayout>

        <TextView
            android:id="@+id/textArtist"
			android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="15sp"
			tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/textAlbum"
			android:text="Album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="15sp"
			tools:ignore="HardcodedText,RtlSymmetry" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical" >
		
		<LinearLayout
			android:id="@+id/linearLayoutPlayer"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageView
				android:id="@+id/album_art"
				android:layout_width="250dp"
				android:layout_height="fill_parent"
				android:paddingStart="5dp"
				android:visibility="gone"
				android:src="@drawable/k13"
				tools:ignore="ContentDescription,RtlSymmetry" />
			
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:background="#a0000000">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/textBufferDuration"
					android:text="00:00"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.5"
					android:textColor="#ffffff"
					tools:ignore="HardcodedText" />

				<TextView
					android:id="@+id/textDuration"
					android:text="00:00"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:textColor="#ffffff"
					tools:ignore="HardcodedText,RtlHardcoded" />
			</LinearLayout>

			<SeekBar
				android:id="@+id/seekBarPlayer"
				android:splitTrack="false"
				android:layout_height="10dp"
				android:layout_width="match_parent"
				android:progressDrawable="@drawable/seekbar_progress"
				android:thumb="@drawable/seekbar_thumb"/>

		</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:paddingTop="20dp"
            android:background="#a0000000"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/play_prev"
				tools:ignore="ContentDescription" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/play"
				tools:ignore="ContentDescription" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/play_next"
				tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
